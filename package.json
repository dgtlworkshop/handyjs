{
	"name": "@dgtlworkshop/handyjs",
	"version": "1.3.0",
	"description": "A collection of handy functions and reference types used across DGTL's Javascript projects",
	"type": "module",
	"files": [
		"dist",
		"src"
	],
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./browser": {
			"types": "./dist/browser/index.d.ts",
			"import": "./dist/browser/index.js",
			"default": "./dist/browser/index.js"
		}
	},
	"scripts": {
		"build": "node scripts/cleanup.mjs esm && tsc -p ./tsconfig.json",
		"prepack": "npm run build && publint",
		"watch": "tsc -w",
		"check": "tsc --noEmit",
		"format": "prettier --write ."
	},
	"author": {
		"name": "Matthew Conto",
		"email": "matthew@dgtlworkshop.com"
	},
	"private": false,
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^20.11.14",
		"prettier": "^3.0.1",
		"publint": "^0.2.0",
		"typescript": "^5.1.6"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"engines": {
		"node": ">=16"
	},
	"sideEffects": false
}
